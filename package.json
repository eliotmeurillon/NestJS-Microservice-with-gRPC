{
  "name": "@nestjs-microservice/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "generate-proto-types": "npx protoc --ts_proto_out=./types/ ./proto/*.proto --ts_proto_opt=nestJs=true",
    "helm:deploy:minikube": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-minikube.ps1",
    "helm:cleanup:minikube": "powershell -ExecutionPolicy Bypass -File ./scripts/cleanup-minikube.ps1",
    "helm:validate": "powershell -ExecutionPolicy Bypass -File ./scripts/validate-helm-chart.ps1",
    "helm:test": "powershell -ExecutionPolicy Bypass -File ./scripts/test-deployment.ps1",
    "helm:lint": "helm lint ./helm/nestjs-microservices",
    "helm:template": "helm template nestjs-microservices ./helm/nestjs-microservices --values ./helm/nestjs-microservices/values-minikube.yaml",
    "k8s:status": "kubectl get all -l app.kubernetes.io/instance=nestjs-microservices",
    "k8s:logs:api-gateway": "kubectl logs -f deployment/nestjs-microservices-api-gateway",
    "k8s:logs:products": "kubectl logs -f deployment/nestjs-microservices-products"
  },
  "nx": {
    "targets": {
      "generate-proto-types": {
        "cache": true,
        "inputs": [
          "{workspaceRoot}/proto/*.proto"
        ]
      },
      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "docker build -f Dockerfile . -t @nestjs-microservice/source"
      },
      "docker-compose:up": {
        "executor": "nx:run-commands",
        "options": {
          "command": "docker-compose up --build -d"
        }
      },
      "docker-compose:down": {
        "executor": "nx:run-commands",
        "options": {
          "command": "docker-compose down"
        }
      },
      "docker-compose:logs": {
        "executor": "nx:run-commands",
        "options": {
          "command": "docker-compose logs -f"
        }
      },
      "docker-compose:dev": {
        "executor": "nx:run-commands",
        "options": {
          "command": "docker-compose -f docker-compose.dev.yml up --build"
        }
      },
      "docker-compose:dev:down": {
        "executor": "nx:run-commands",
        "options": {
          "command": "docker-compose -f docker-compose.dev.yml down"
        }
      },
      "helm:deploy:minikube": {
        "executor": "nx:run-commands",
        "options": {
          "command": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-minikube.ps1"
        }
      },
      "helm:cleanup:minikube": {
        "executor": "nx:run-commands",
        "options": {
          "command": "powershell -ExecutionPolicy Bypass -File ./scripts/cleanup-minikube.ps1"
        }
      },
      "helm:validate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "powershell -ExecutionPolicy Bypass -File ./scripts/validate-helm-chart.ps1"
        }
      },
      "helm:test": {
        "executor": "nx:run-commands",
        "options": {
          "command": "powershell -ExecutionPolicy Bypass -File ./scripts/test-deployment.ps1"
        }
      }
    }
  },
  "private": true,
  "dependencies": {
    "@grpc/grpc-js": "^1.13.2",
    "@grpc/proto-loader": "^0.7.13",
    "@nestjs/common": "^11.0.12",
    "@nestjs/core": "^11.0.12",
    "@nestjs/microservices": "^11.0.12",
    "@nestjs/platform-express": "^11.0.12",
    "@nestjs/testing": "^11.0.12",
    "axios": "^1.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "ts-proto": "^2.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^10.0.1",
    "@nx/eslint": "20.6.4",
    "@nx/eslint-plugin": "20.6.4",
    "@nx/jest": "20.6.4",
    "@nx/js": "20.6.4",
    "@nx/nest": "20.6.4",
    "@nx/node": "20.6.4",
    "@nx/web": "20.6.4",
    "@nx/webpack": "20.6.4",
    "@nx/workspace": "20.6.4",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^29.5.12",
    "@types/node": "~18.16.9",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nx": "20.6.4",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.19.0",
    "webpack-cli": "^5.1.4"
  }
}
